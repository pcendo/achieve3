<%= stylesheet_link_tag "application" %>

<div class="container">

  <div class="form-horizontal" >

    <div class="form-group">
      <h2>以下の内容で、登録する。</h2>
    </div>

    <%= form_with(model: @instagram, url: instagrams_path, local: true) do |form| %>

      <div class="form-group">
        <%= form.hidden_field :image %>
        <%= hidden_field_tag :"cache[image]", @instagram.image.cache_name %>
        <%= form.hidden_field :content %>
        <%= form.hidden_field :user_id %>

        <%= image_tag @instagram.image.url %>
      </div>
      <div class="form-group">
        <p>コメント：</p>
        <p style="font-size:1.5rem; word-wrap:break-word;"><%= @instagram.content %></p>
      </div>
      <div class="form-group">
        <%= form.submit "登録する", :class => "btn btn-primary btn-block" %>
      </div>
    <% end %>

      <div class="form-group">
        <%= form_with(model: @instagram, url: new_instagram_path, local: true, method: 'get') do |form| %>
          <%= form.hidden_field :image %>
          <%= form.hidden_field :content %>
          <%= form.hidden_field :user_id %>
          <%= form.submit "戻る", name: 'back', :class => "btn btn-info btn-block" %>
        <% end %>
      </div>

  </div>
</div>
