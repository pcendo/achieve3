<%= stylesheet_link_tag "application" %>

<%= form_with(model: @instagram, local: true, url: choose_new_or_edit ) do |form| %>
  <% if @instagram.errors.any? %>
    <div id="error_explanation">
      <h2><%= @instagram.errors.count %>件のエラーがあります。</h2>
      <ul>

      <% @instagram.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label t('label.photo') %>
    <div>
      <%= form.file_field :image, id: :instagram_image, :class => "form-control-file" %>
      <%= form.hidden_field :image_cache %>
    </div>
  </div>
  <div class="form-group">
    <%= form.label t('label.content') %>
    <div>
      <%= form.text_field :content, :class => "form-control", rows: "3" %>
    </div>
  </div>
  <div class="form-group">
    <%= form.submit "PHOTOを登録する‼", :class => "btn btn-primary btn-block" %>
  </div>

    <% end %>
  <div class="form-group">
    <%= link_to "PHOTO一覧画面にもどる", instagrams_path, :class => "btn btn-success btn-block" %>
  </div>